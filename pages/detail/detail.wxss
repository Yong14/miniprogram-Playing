/* pages/detail/detail.wxss */
.content{
    width: 100%;
}
.swiper{
    width: 100%;
    height: 400rpx;
}
.swiper-item{
    width: 100%;
    height: 100%;
}
.swiper-img{
    width: 100%;
    height: 100%;
}
.comments{
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}
.comment-item{
    width: 100%;
    margin-bottom: 30rpx;
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid #ccc;
}
.user{
    width: 100%;
    display: flex;
}
.user-name{
    flex:1;
    font-size: 40rpx;
    margin-bottom: 10rpx;
}
.time>text{
    color: red;
    margin-left: 10rpx;
}
.comtent{
    font-size: 28rpx;
    color: rgb(133, 133, 133);
    text-align: start;
}
.comtent-img{
    display: flex;
    height: 100px;
    white-space: nowrap;
}
.comtent-img image{
    flex: 0 0 100px;
    width: 100px;
    height: 100px;
    padding: 10rpx 10rpx 10rpx 0;
    box-sizing: border-box;
}