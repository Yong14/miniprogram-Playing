/* pages/store/store.wxss */ 
.store{
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
}
.store-item{
    display: flex;
    width: 100%;
    height: 200rpx;
    border-bottom: 1px solid #ccc;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}
.item-desc{
    flex: 1;
}
.item-img{
    flex: 0 0 160rpx;
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    border-radius: 6rpx;
}
.item-nm{
    font-size: 32rpx;
    margin-bottom: 5rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-sc{
    font-size: 20rpx;
    margin-bottom: 5rpx;
    color: #A0A0A1;
}
.loading{
    width: 100%;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
}